{
    "coc.source.word.filetypes": ["text", "markdown"],
    "coc.source.emoji.filetypes": ["text", "markdown"],
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "javascript",
        "javascriptreact",
        "json"
    ],
    "prettier.tabWidth": 4,
    "java.import.gradle.java.home": "/usr/lib/jvm/java-17-openjdk",
    "java.symbols.includeSourceMethodDeclarations": true,
    "coc.source.vimtex.filetypes": [
        "tex",
        "plaintex"
    ],
    "semanticTokens.enable": true,
    "languageserver": {
        "csharp-ls": {
            "command": "csharp-ls",
            "filetypes": ["cs"],
            "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        }
    }
}

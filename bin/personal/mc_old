#! /usr/bin/env python3

import os


script_type = input("What kind of script? Bash [b] / Python [p] ")
script_name = input("What is the name of your script? ")

os.chdir("/home/musa/bin/personal")


if script_type == 'b':

    script_name1 = "{}.sh".format(script_name)

    with open(script_name1,"a") as f:
        f.write("#! /bin/bash")

    f.close()

    os.system("vim {}".format(script_name1))
    os.system("chmod +x {}".format(script_name1))
    os.system("mv {} {}".format(script_name1,script_name))
    
elif script_type == 'p':

    script_name1 = "{}.py".format(script_name)


    with open(script_name1,"a") as f:
        f.write("#! /usr/bin/env python3")

    f.close()

    os.system("vim {}".format(script_name1))
    os.system("chmod +x {}".format(script_name1))
    os.system("mv {} {}".format(script_name1,script_name))

print("Thank you for using ComBot's script creation tool; be sure to leave me a reviewe on RateYourBot.com!")

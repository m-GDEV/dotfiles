#! /bin/bash

# this cant handle spaces in name, fix it

images()     { viewnior $1 >> /dev/null 2>&1 &  }
#videos()
#officedocs()
#textfiles()


go ()
{
  if [ -f $1 ] ; then
    case $1 in
      
      # Images
      *.png)   images $1 ;;
      *.jpg)    images $1 ;;
      *.jpeg)    images $1 ;; 
      *.webp)     images $1  ;;
      *.gif)       images $1 ;;
      *.svg)       images $1 ;;

      # Videos

      # Unsupported
      *)           echo "'$1' File incompatible with go. Please consider adding it." ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

go $1


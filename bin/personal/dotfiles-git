#! /bin/bash
echo "Collecting Dotfiles from around the galaxy..."

DIR="dotfiles-git"
TAR="/home/musa/pCloudDrive/zMisc./Dotfiles"


rm -rf /tmp/$DIR
mkdir /tmp/$DIR
cd /tmp/$DIR

mkdir config
mkdir bin
mkdir themes
mkdir icons

# copying things from .config folder
cp -r ~/.config/i3 ./config
cp -r ~/.config/polybar ./config
cp -r ~/.config/sakura ./config
cp -r ~/.config/starship.toml ./config

# copying from home dir
cp ~/.bashrc .
cp ~/.vimrc .
cp -r ~/.vim .

# copy from local bin folder
cp -r ~/bin/personal ./bin
cp -r ~/bin/scripts ./bin
find ~/bin/programs > ./bin/programs.txt

# collecting themes and icons
tar -cf icons-and-themes.tar ~/.icons ~/.themes

# extra
read -n 1 -p "Please download your bookmarks to /tmp/dotfiles-git. Press enter to continue. "

cd /tmp
rsync -qr /tmp/$DIR $TAR
